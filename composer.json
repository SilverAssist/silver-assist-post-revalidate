{
	"name": "silver-assist/post-revalidate",
	"description": "WordPress plugin for automatic post and category cache revalidation",
	"type": "wordpress-plugin",
	"license": "PolyForm-Noncommercial-1.0.0",
	"authors": [
		{
			"name": "Silver Assist",
			"homepage": "http://silverassist.com/"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=8.2",
		"composer/installers": "^2.0",
		"silverassist/wp-github-updater": "^1.1",
		"silverassist/wp-settings-hub": "^1.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
		"php-stubs/wordpress-stubs": "^6.6",
		"php-stubs/wordpress-tests-stubs": "^6.6",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^9.6",
		"squizlabs/php_codesniffer": "^3.7",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"wp-coding-standards/wpcs": "^3.0",
		"yoast/phpunit-polyfills": "^4.0"
	},
	"autoload": {
		"psr-4": {
			"RevalidatePosts\\": "Includes/"
		}
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"phpstan": "phpstan analyse --memory-limit=1G",
		"phpunit": "phpunit",
		"test": [
			"@phpcs",
			"@phpstan",
			"@phpunit"
		]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
